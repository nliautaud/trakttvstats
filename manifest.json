{
  "manifest_version": 2,

  "name": "Trakt improver DEV",
  "short_name" : "trakttvstats",
  "description": "Add various improvements to Trakt.tv",
  "version": "0.5.1",
  "version_name": "0.5 (0.5.1)",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "https://trakt.tv/*",
    "https://api.themoviedb.org/*"
  ],
  "background": {
      "page": "background.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": { "128": "icon-dev.png" },
  "page_action": {
    "default_icon": "icon-dev.png",
    "default_popup": "options.html"
  }
}

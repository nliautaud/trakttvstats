{
  "manifest_version": 2,

  "name": "Trakt improver",
  "short_name" : "trakttvstats",
  "description": "Add various improvements to Trakt.tv",
  "version": "0.3",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "https://trakt.tv/*"
  ],
  "background": {
      "scripts": ["js/background.js"],
      "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": { "128": "icon.png" }
}

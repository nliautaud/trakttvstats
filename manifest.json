{
  "manifest_version": 2,

  "name": "Trakt improver DEV",
  "short_name" : "trakttvstats",
  "description": "Add various improvements to Trakt.tv",
  "version": "0.4.0",
  "version_name": "0.4 alpha",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "https://trakt.tv/*"
  ],
  "background": {
      "page": "background.html",
      "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": { "128": "icon.png" },
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  }
}
